@model SettingsModel

@{
    ViewData["Title"] = @localizationService.GetResource("settings.title");
}

@using(Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(x => x.UISettings.Language, localizationService.GetResource("settings.language"))
        @Html.DropDownListFor(x => x.UISettings.Language, Model.UISettings.AvailableLanguages, new { @class= "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.EngineSettings.Threads, localizationService.GetResource("settings.threads"))
        @Html.EditorFor(x => x.EngineSettings.Threads, new { htmlAttributes = new { @class = "form-control", min = @Model.EngineSettings.MinThreads, max = @Model.EngineSettings.MaxThreads }})
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.EngineSettings.EnginePath, localizationService.GetResource("settings.EnginePath"))
        @Html.EditorFor(x => x.EngineSettings.EnginePath, new { htmlAttributes = new { @class= "form-control" } })
    </div>

    <input class="btn btn-primary" type="submit" value="@localizationService.GetResource("settings.save")"/>
}